<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d [%thread] %-5level %logger{36} - %msg%n%ex{20}</pattern>
        </encoder>
    </appender>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <encoder>UTF-8</encoder>
        <file>elasticCrawler.log</file>
        <append>true</append>
        <encoder>
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n%ex{20}</pattern>
        </encoder>
    </appender>

    <!--<logger name="org.ec.className" level="info"/>-->
    <!-- 日志级别 -->
    <root>
        <!-- 定义INFO级别的日志, 分别在FILE文件和控制台输出 -->
        <level value="info"/>
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>
